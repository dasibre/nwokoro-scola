- content_for :body do
  .grid.grid-pad
    - @practice_areas.each do |practice_area|
      .col-1-3
        .content
          .box-heading
            = link_to practice_area.name, refinery.practice_areas_practice_area_path(practice_area)
          .box-body
            = truncate(practice_area.blurb.html_safe,length: 400,escape: false)
            = link_to 'more info', refinery.practice_areas_practice_area_path(practice_area)
= render '/refinery/content_page'
