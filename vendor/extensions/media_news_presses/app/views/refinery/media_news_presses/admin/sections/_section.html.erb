<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(section) -%>">
  <span class='title'>
    <%= section.name %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.media_news_presses_section_path(section), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_media_news_presses_admin_section_path(section), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.media_news_presses_admin_section_path(section), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: section.name)}}  ) %>
  </span>
</li>
