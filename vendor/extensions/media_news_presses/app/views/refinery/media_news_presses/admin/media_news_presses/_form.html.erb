<%= form_for [refinery, :media_news_presses_admin, @media_news_press] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @media_news_press,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title -%>
  </div>

  <div class='field'>
    <%= f.label :section -%>
    <%= f.select(:section_id, @sections.collect { |section| [section.name, section.id] }) -%>
  </div>

  <div class='field'>
    <%= f.label :date -%>
    <%= f.datetime_select :date -%>
  </div>

  <div class='field'>
    <%= f.label :link -%>
    <%= f.text_field :link -%>
  </div>

  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @media_news_press.photo,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:blurb],
                :object => "media_news_presses/media_news_press" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.media_news_presses.admin.media_news_presses.media_news_press'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @media_news_press.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
