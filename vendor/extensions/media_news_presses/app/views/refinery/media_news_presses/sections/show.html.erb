<% content_for :body_content_title do %>
  <%= @section.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @section.name %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="sections">
      <% @sections.each do |section| %>
        <li>
          <%= link_to section.name, refinery.media_news_presses_section_path(section) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
