<% content_for :body_content_title do %>
  <%= @media_news_press.title %> Release
<% end %>

<% content_for :body do %>
  <section>
    <h1><%=raw "#{@media_news_press.section.name.capitalize} Release" %></h1>
    <h4><%=raw @media_news_press.date.strftime("%B %d, %Y") %></h4>
  </section>
  <section>
    <p>
      <%=raw @media_news_press.blurb %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2>Press Items</h2>
    <ul id="media_news_presses">
      <% press_releases(@media_news_presses).each do |media_news_press| %>
        <li>
          <%= link_to media_news_press.title, refinery.media_news_presses_media_news_press_path(media_news_press) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
